<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout"

        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <Button
            android:id="@+id/btnCPUVsCPU"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="32dp"
            android:background="@drawable/rounded_button"
            android:paddingTop="24dp"
            android:paddingBottom="24dp"
            android:tag="4"
            android:text="CPU 1 vs. CPU"
            android:textColor="@android:color/white"
            app:layout_constraintBottom_toTopOf="@+id/btnHumanVsHuman"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/btnHumanVsHuman"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="32dp"
            android:background="@drawable/rounded_button"
            android:paddingTop="24dp"
            android:paddingBottom="24dp"
            android:tag="1"
            android:text="Player 1 vs. Player 2"
            android:textColor="@android:color/white"
            app:layout_constraintBottom_toTopOf="@+id/btnHumanVsCPU"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/btnHumanVsCPU"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="32dp"
            android:background="@drawable/rounded_button"
            android:paddingTop="24dp"
            android:paddingBottom="24dp"
            android:tag="2"
            android:text="Player 1 vs. CPU"
            android:textColor="@android:color/white"
            app:layout_constraintBottom_toTopOf="@+id/btnCPUVsHuman"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/btnCPUVsHuman"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="32dp"
            android:background="@drawable/rounded_button"
            android:paddingTop="24dp"
            android:paddingBottom="24dp"
            android:tag="3"
            android:text="CPU Vs. Player 2"
            android:textColor="@android:color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="196dp"
            android:layout_height="196dp"
            android:layout_marginTop="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/logo_256" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>

